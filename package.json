{
  "devDependencies": {
    "@biomejs/biome": "2.3.10"
  },
  "name": "inboxly.com",
  "description": "AI-powered email client with smart features",
  "packageManager": "bun@latest",
  "private": true,
  "scripts": {
    "build": "bun --workspaces run build",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "bun run dev:api & bun run dev:web",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "pre:install": "bun update --latest --recursive && bun install",
    "prepare:deploy": "bun install",
    "start": "bun --workspaces run start"
  },
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
